@model CreateUserDto;
<div class="container">
    <form asp-action="CreateUser" asp-controller="Account">
        <div class="form-group">
            <label for="UserName">Kullanıcı Adı</label>
            <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı adı">
            <br />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label for="Email">E-posta</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="E-posta">
            <br />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="Password">Şifre</label>
            <input type="Password" class="form-control" asp-for="Password" placeholder="Ürün Stoğu">
            <br />
            <span asp-validation-for="Password"></span>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary">Ürünü Kaydet</button>
    </form>
</div>