@model CreateProductViewModel;
<div class="container">
    <form asp-action="CreateProduct" asp-controller="Product">
        <div class="form-group">
            <label for="ProductName">Ürün Adı</label>
            <input type="text" class="form-control" asp-for="ProductName" placeholder="Ürün Adı">
            <br />
            <span asp-validation-for="ProductName"></span>
        </div>
        <div class="form-group">
            <label for="Price">Fiyat</label>
            <input type="text" class="form-control" asp-for="Price" placeholder="Ürün Fiyatı">
            <br />
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label for="Price">Stok</label>
            <input type="text" class="form-control" asp-for="Stock" placeholder="Ürün Stoğu">
            <br />
            <span asp-validation-for="Stock"></span>
        </div>
        <div class="form-group">
            <label for="CategoryId">Kategori</label>
            <select class="form-select" asp-for="CategoryId">
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.CategoryId">@item.CategoryName</option>
                }
            </select>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary">Ürünü Kaydet</button>
    </form>
</div>